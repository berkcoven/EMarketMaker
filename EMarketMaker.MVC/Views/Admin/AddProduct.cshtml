@model ProductAddDto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="col-xl-12 xl-100 col-lg-12" style=" top: 30%;

  transform: translateY(20%);">
    <div class="card">
        <div class="card-header">
            <h5 class="pull-left">Add Product</h5>
        </div>
        <div class="card-body">
            <div class="tabbed-card">
                @using (Html.BeginForm("AddProduct", "Admin", FormMethod.Post))
                {
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="row">
                        
                        <div class="col-md-12">
                            <label class="col-lg-12 control-label text-lg-left" for="textinput">Categories</label>
                            <div class="col-lg-12">
                                @Html.DropDownList("ProductDto.CategoryId",
                            new SelectList(Model.categoryDtos, "Id", "Name"),
                            
                            new { @class = "form-control dropdown" })
                            </div>
                        </div>


                        <div class="col-md-6" style="margin-top: 10px;">
                            <label class="col-lg-12 control-label text-lg-left" for="textinput">Name Of Product</label>
                            <div class="col-lg-12">
                                @Html.TextBoxFor(m => m.ProductDto.Name, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 10px;">
                            <label class="col-lg-12 control-label text-lg-left" for="textinput">Price</label>
                            <div class="col-lg-12">
                                @Html.TextBoxFor(m => m.ProductDto.Price, new {@type="number", @min="0",@step=".01",@class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6" style="margin-top: 10px;">
                            <label class="col-lg-12 control-label text-lg-left" for="textinput">Stock</label>
                            <div class="col-lg-12">
                                @Html.TextBoxFor(m => m.ProductDto.Stock, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-12" style="margin-top: 10px;">
                            <label class="col-lg-12 control-label text-lg-left" for="textinput">Description</label>
                            <div class="col-lg-12">
                                @Html.TextAreaFor(m => m.ProductDto.Description, new { @class = "form-control" })
                            </div>
                        </div>
                        
                        <div class="col-md-12" style="margin-top: 15px;">
                            <button type="submit" style="width:inherit" class="btn btn-lg btn-outline-secondary-2x btn-air-secondary">Submit</button>
                        </div>
                        
                    </div>
                }
            </div>
        </div>
    </div>
</div>
